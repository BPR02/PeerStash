{
  "branches": [
    "main"
  ],
  "tagFormat": "peerstash-compose-v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        },
        "releaseRules": [
          {
            "scope": "!*compose*",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/npm"
    ],
    [
      "semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["docker-compose.yml"],
            "from": "name: peerstash-v\".*\"",
            "to": "name: peerstash-v\"${nextRelease.version}\"",
            "results": [
              {
                "file": "docker-compose.yml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ]
  ]
}
