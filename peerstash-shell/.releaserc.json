{
  "branches": [
    "main"
  ],
  "tagFormat": "peerstash-shell-v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        },
        "releaseRules": [
          {
            "scope": "!*shell*",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/npm"
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "../scripts/build-and-push.sh peerstash-control ${nextRelease.version} ${branch.name}"
      }
    ]
  ]
}
